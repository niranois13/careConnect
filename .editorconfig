# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true
[*]
indent_size = 2

[*.{js,ts,tsx,yml,json,md}]
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space

[*.{js,yml,ts,tsx}]
max_line_length = 100

[package.json]
trim_trailing_whitespace = false